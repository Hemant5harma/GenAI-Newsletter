# ===========================================
# GenAI Newsletter - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ----- DATABASE -----
DATABASE_URL="postgresql://user:password@localhost:5432/newsletter_db"

# ----- AI PROVIDER -----
# Choose which AI provider to use: 'gemini' or 'perplexity'
AI_PROVIDER="perplexity"

# ----- GOOGLE GEMINI -----
# Required if AI_PROVIDER is 'gemini'
# Get your key at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY="your_google_api_key_here"

# ----- PERPLEXITY AI -----
# Required if AI_PROVIDER is 'perplexity' (recommended for research)
# Get your key at: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY="your_perplexity_api_key_here"

# ----- NEXT.JS -----
NODE_ENV="development"
